<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <title>
    {{title}}
    </title>
  </head>
  <body>
    {{> navegacion }}
    <div class="container mt-2">
      <h1>{{title}}</h1>
      <hr>
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">Agregar Video Juego</button>
      </div>
      {{> videoJuegosCreateModal }}
      <hr>
      <div>
        <table class="table table-striped table-bordered" id="videoJuegosTable">
          <thead>
            <tr>
              <th scope="col">Nombre</th>
              <th scope="col">Plataforma</th>
              <th scope="col">Año</th>
              <th scope="col">Genero</th>
              <th scope="col">Editorial</th>
              <th scope="col">Acciones</th>
            </tr>
          </thead>
          <tbody>
            {{#each videoJuegos}}
            <tr>
              <td>{{this.Nombre}}</td>
              <td>{{this.Plataforma}}</td>
              <td>{{this.Año}}</td>
              <td>{{this.Genero}}</td>
              <td>{{this.Editorial}}</td>
              <td>
                <div class="btn-group" role="group">
                  <a class="btn btn-secondary" href="/videoJuegos/delete/{{this.id}}">Eliminar</a>
                  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#updateModal-{{this.id}}">Actualizar</button>
                  {{> videoJuegosUpdateModal juego=this }}
                </div>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      <hr>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <script type="text/javascript" src="javascripts/script.js"></script>
  </body>
</html>